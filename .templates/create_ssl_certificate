# v create_ssl_certificate
ENV SSL_CERTIFICATE_ALIAS="${SSL_CERTIFICATE_ALIAS}" \
    SSL_CERTIFICATE_COMMON_NAME="${SSL_CERTIFICATE_COMMON_NAME}" \
    SSL_CERTIFICATE_COUNTRY="${SSL_CERTIFICATE_COUNTRY}" \
    SSL_CERTIFICATE_EXPIRATION_DAYS="${SSL_CERTIFICATE_EXPIRATION_DAYS}" \
    SSL_CERTIFICATE_LOCALITY="${SSL_CERTIFICATE_LOCALITY}" \
    SSL_CERTIFICATE_ORGANIZATION="${SSL_CERTIFICATE_ORGANIZATION}" \
    SSL_CERTIFICATE_ORGANIZATIONAL_UNIT="${SSL_CERTIFICATE_ORGANIZATIONAL_UNIT}" \
    SSL_CERTIFICATE_STATE="${SSL_CERTIFICATE_STATE}" \
    SSL_CERTIFICATE_WILDCARD_COMMON_NAME="${SSL_CERTIFICATE_WILDCARD_COMMON_NAME}" \
    SSL_JAVA_SIGN_ALGORITHM="${SSL_JAVA_SIGN_ALGORITHM}" \
    SSL_KEYSTORE_FOLDER="${SSL_KEYSTORE_FOLDER}" \
    SSL_KEYSTORE_NAME="${SSL_KEYSTORE_NAME}" \
    SSL_KEYSTORE_PASSWORD="${SSL_KEYSTORE_PASSWORD}" \
    SSL_KEYSTORE_PATH="${SSL_KEYSTORE_PATH}" \
    SSL_KEYSTORE_TYPE="${SSL_KEYSTORE_TYPE}" \
    SSL_KEY_ALGORITHM="${SSL_KEY_ALGORITHM}" \
    SSL_KEY_ENCRYPTION="${SSL_KEY_ENCRYPTION}" \
    SSL_KEY_FOLDER="${SSL_KEY_FOLDER}" \
    SSL_KEY_LENGTH="${SSL_KEY_LENGTH}" \
    SSL_KEY_PASSWORD="${SSL_KEY_PASSWORD}" \
    SSL_SAN_EXTENSIONS="${SSL_SAN_EXTENSIONS}"

COPY create_ssl_certificate-files/create_ssl_certificate_openssl.sh \
     create_ssl_certificate-files/create_ssl_certificate.inc.sh \
     /usr/local/bin/

RUN cd /usr/local/bin && \
    ln -sf create_ssl_certificate.inc.sh create_ssl_certificate_openssl.inc.sh && \
    chmod +x create_ssl_certificate_openssl.sh
# ^ create_ssl_certificate
