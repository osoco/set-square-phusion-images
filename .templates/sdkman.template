RUN su - ${SERVICE_USER} -c 'cd ${SERVICE_USER_HOME} && wget -q -O- http://get.sdkman.io | bash && chmod +x ${SERVICE_USER_HOME}/.sdkman/bin/sdkman-init.sh' \
 && echo 'export SDKMAN_DIR="${SERVICE_USER_HOME}/.sdkman"' >> ${SERVICE_USER_HOME}/.bashrc \
 && echo '[[ -s "${HOME}/.sdkman/bin/sdkman-init.sh" ]] && source "${HOME}/.sdkman/bin/sdkman-init.sh' >> ${SERVICE_USER_HOME}/.bashrc
